{{!-- modal for add user --}}
<div class="float-right p-4 justify-content">
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
 + Add New Course
</button>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add New Course</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form class="d-flex " method="POST" action="/" novalidate>
  <div class="form-group">
    <label for="formGroupExampleInput">Course</label>
    <input type="text" class="form-control" value="{{this.name}}" id="formGroupExampleInput" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Author</label>
    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Skill">
  </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</form>





{{!-- view search table --}}
<table class="table ">
  <thead>
    <tr>
      <th scope="col">Course</th>
      <th scope="col">Duration Study</th>
      <th scope="col">Description</th>
      <th scope="col">No</th>
      <th scope="col"> Option Action </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      {{#each rows}}
      <th scope="row">{{this.id}}</th>
        <td class="w-25">
			      <img src="{{this.image}}" class="img-fluid img-thumbnail" alt="Sheep">
		      </td>
      <td>{{this.course_name}}</td>
      <td>{{this.}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
     
